<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF0099CC"
    android:orientation="vertical"
    tools:context=".Oxygen_Cylinder_donation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#D6EDF8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_plasma"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center"
                    android:text="@string/oxygen_cylinder"
                    android:textColor="@color/blue"
                    android:textSize="40dp"
                    android:textStyle="italic|bold" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/oxygen_cylinder_donate1"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="7sp"
                    android:layout_weight="60"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/oxy_cylinder"
                    app:lottie_repeatCount="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--RadioGroup
                    android:layout_width="match_parent"
                    android:id="@+id/radiogroup3"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_gravity="center"
                        android:layout_marginRight="20sp"
                        android:text="@string/receive_oxygen_cylinder"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:text="@string/donate_oxygen_cylinder"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RadioGroup-->

            </LinearLayout>

            <TextView
                android:id="@+id/o2FillOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="@string/fill_out_the_details"
                android:textSize="20sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/username1"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/username"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/o2DonationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/city1"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/city"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/city"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/o2DonationCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_city" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/quantity1"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/quantity"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/quantity"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/o2DonationQuantity"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="2"
                        android:hint="Enter Quantity in Liters" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/mobile1"
                        android:layout_width="21dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/mobilephone"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/mobile"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/o2DonationMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_mobile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/email1"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/email"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/email"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/o2DonationEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/o2SubmitButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:text="@string/submit2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/o2ClearButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:text="@string/clear2"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF0099CC" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>