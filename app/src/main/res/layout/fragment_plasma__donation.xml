<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF0099CC"
    android:orientation="vertical"
    tools:context=".Plasma_Donation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#D6EDF8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:background="@drawable/border_plasma"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center"

                    android:text="@string/plasma_donation"
                    android:textColor="@color/blue"
                    android:textSize="40dp"
                    android:textStyle="italic|bold" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/homeScreenplasma"
                    android:layout_width="match_parent"
                    android:layout_height="114dp"
                    android:layout_marginLeft="7sp"
                    android:layout_weight="60"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/plasma_donate"
                    app:lottie_repeatCount="10" />

            </LinearLayout>
            <!--LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        android:text="@string/receive_plasma"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10sp"
                        android:layout_marginRight="10sp"
                        android:text="@string/donate_plasma_a"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RadioGroup>

            </LinearLayout-->

            <TextView
                android:id="@+id/plasmaDonationFillOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:gravity="center"
                android:text="@string/fill_out_the_details"
                android:textSize="20sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/username2"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/username"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/name"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/plasmaDonationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_name" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/bloodgp2"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="3"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/blood_group"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/blood_group"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/plasmaDonationBloodGroupSpinner"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/city2"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/city"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/city"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/plasmaDonationCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_city" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/quantity2"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/quantity"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/quantity"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/plasmaDonationQuantity"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_the_quantity" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/mobile2"
                        android:layout_width="21dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/mobilephone"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/mobile"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/plasmaDonationMobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_mobile" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/email2"
                        android:layout_width="11dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1sp"
                        android:layout_weight="1"
                        app:lottie_autoPlay="true"
                        app:lottie_rawRes="@raw/email"
                        app:lottie_repeatCount="10" />

                    <TextView
                        android:id="@+id/text15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp"
                        android:layout_weight="2"
                        android:text="@string/email"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/plasmaDonationEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight="2"
                        android:hint="@string/enter_your_email" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/plasmaDonationSubmitButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:text="@string/submit1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/plasmaDonationClearButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:text="@string/clear1"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FF0099CC" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>